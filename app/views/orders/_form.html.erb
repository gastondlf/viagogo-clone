<%= simple_form_for [@order] do |f| %>  
  <div class="mb-3">
    <%= f.label :first_name, class: "form-label" %>
    <%= f.text_field :first_name, class: "form-control" %>
  </div>
  
  <div class="mb-3">
    <%= f.label :last_name, class: "form-label" %>
    <%= f.text_field :last_name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :address, class: "form-label" %>
    <%= f.text_field :address, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :city, class: "form-label" %>
    <%= f.text_field :city, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :zip_code, class: "form-label" %>
    <%= f.text_field :zip_code, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :credit_card_number, class: "form-label" %>
    <%= f.text_field :credit_card_number, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :cvc, class: "form-label" %>
    <%= f.text_field :cvc, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :phone, class: "form-label" %>
    <%= f.text_field :phone, class: "form-control" %>
  </div>

  <div class="mt-3 mb-3">
    <%= f.submit 'Submit', class: "btn btn-primary" %>
  </div>
<% end %>